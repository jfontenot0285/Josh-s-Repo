         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
      <Label fx:id="userNameLbl" layoutX="46.0" layoutY="90.0" text="User Name" />
      <Label fx:id="passwordLbl" layoutX="55.0" layoutY="133.0" text="Password" />
